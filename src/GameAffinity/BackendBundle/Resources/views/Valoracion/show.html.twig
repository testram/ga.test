{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Valoracion</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ entity.titulo }}</td>
            </tr>
            <tr>
                <th>Calificacion</th>
                <td>{{ entity.calificacion }}</td>
            </tr>
            <tr>
                <th>Opinion</th>
                <td>{{ entity.opinion }}</td>
            </tr>
            <tr>
                <th>Puntaje</th>
                <td>{{ entity.puntaje }}</td>
            </tr>
            <tr>
                <th>Revisado</th>
                <td>{{ entity.revisado }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('valoracion') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('valoracion_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
