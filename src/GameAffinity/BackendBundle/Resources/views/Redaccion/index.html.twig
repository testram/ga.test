{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Redaccion list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>Salt</th>
                <th>Role</th>
                <th>Foto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('redaccion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.salt }}</td>
                <td>{{ entity.role }}</td>
                <td>{{ entity.foto }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('redaccion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('redaccion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('redaccion_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
