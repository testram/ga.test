{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Juego list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Slug</th>
                <th>Foto</th>
                <th>Fecha_lanzamiento</th>
                <th>Critica</th>
                <th>Puntuacion</th>
                <th>Votos</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('juego_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.foto }}</td>
                <td>{% if entity.fechalanzamiento %}{{ entity.fechalanzamiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.critica }}</td>
                <td>{{ entity.puntuacion }}</td>
                <td>{{ entity.votos }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('juego_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('juego_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('juego_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
